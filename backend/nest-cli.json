{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json",
    "assets": [
      {
        "include": "../../../libs/shared/src/i18n/**/*",
        "watchAssets": true,
        "outDir": "dist/apps/api"
      }
    ]
  },
  "projects": {
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "apps/api/tsconfig.app.json",
        "assets": [
          {
            "include": "../../../libs/shared/src/i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/api"
          }
        ]
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/tauth/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "apps/auth/tsconfig.app.json",
        "assets": [
          {
            "include": "../../../libs/shared/src/i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/auth"
          }
        ]
      }
    }
  },
  "monorepo": true,
  "root": "apps/api"
}
